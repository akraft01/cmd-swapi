{
  "compilerOptions": {
    "target": "ES2020",                   // Set the JS version that will be emitted
    "module": "ESNext",                   // Use the latest ECMAScript module system
    "moduleResolution": "node",           // Resolve modules like Node.js
    "strict": true,                       // Enable strict type checking
    "esModuleInterop": true,              // Enable interop between CommonJS and ES modules
    "skipLibCheck": true,                 // Skip type checks on declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file name casing is consistent
    "outDir": "./dist",                   // Specify output directory for compiled files
    "rootDir": "./src"                    // Specify root directory for source files
  },
  "include": ["src/**/*.ts"],             // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]
}
